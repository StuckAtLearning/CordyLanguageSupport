{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.cordy",
    "name": "Cordy",
    "patterns": [
        { "include": "#keywords" },
        { "include": "#constants" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#builtins" },
        { "include": "#types" },
        { "include": "#comment.line" },
        { "include": "#comment.block" }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                "name": "keyword.control.cordy",
                "match": "\\b(let|fn|return|if|elif|else|loop|while|for|in|is|break|continue|struct|exit)\\b"
            }]
        },
        "constants": {
            "patterns": [{
                "name": "constant.language.cordy",
                "match": "\\b(true|false|nil|or|and)\\b"
            }]
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric.cordy",
                "match": "\\b(0x|0b)?[0-9]+\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.single.cordy",
            "begin": "'",
            "end": "'",
            "patterns": [{
                "name": "constant.character.escape.cordy",
                "match": "\\[\\.\\n\\r]"
            }]
        },
        "builtins": {
            "patterns": [{
                "name": "support.function.cordy",
                "match": "\\b(print|read|read_text|write_text|to_lower|to_upper|replace|trim|index_of|count_of|split|len|range|enumerate|sum|min|max|map|filter|reduce|sorted|reversed|pop|push|last|head|tail|init|insert|remove|merge|abs|gcd|lcm)\\b"
            }]
        },
        "types": {
            "patterns": [{
                "name": "support.type.cordy",
                "match": "\\b(int|str|function|list|heap|dict|set)\\b"
            }]
        },
        "comment.line": {
            "name": "comment.line.double-dash.cordy",
            "begin": "//",
            "end": "$"
        },
        "comment.block": {
            "name": "comment.block",
            "begin": "/\\*",
            "end": "\\*/"
        }
    }
}